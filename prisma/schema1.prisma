generator client {
  provider = "prisma-client-js"
  output   = "./generated/client1"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model users {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  token    String?
  role     String?
}

model errorLogs {
  id         Int      @id @default(autoincrement())
  stack      String   @db.NVarChar(max)
  created_at DateTime

  @@map("error_logs")
}
